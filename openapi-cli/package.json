{
  "name": "openapi-cli-tester",
  "version": "1.0.0",
  "description": "A CLI tool for testing APIs against OpenAPI specifications",
  "main": "dist/cli.js",
  "bin": {
    "openapi-test": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "server": "ts-node src/server.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "openapi",
    "api",
    "testing",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.6.0",
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "express": "^4.21.2",
    "js-yaml": "^4.1.0",
    "openapi-types": "^12.1.3",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^22.18.13",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/src/commands/test.ts"
    ]
  }
}
